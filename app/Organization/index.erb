<div class='span12'>
  <div class="subheader">
    <h4 class='pull-left'>Organizations</h4>
  </div>
  <div id="wrapper">
    <div id="scroller">
      <table class='table'>
        <%@organizations.each do |organization| %> 
          <tr>
            <td class='side-grey'>
              <a href="/app/Organization/set_org?id=<%=organization.object%>" class="custom-link" data-back="/app/Organization" data-link='/app/Gallery'>
                <img src="http://www.gravatar.com/avatar/<%=Digest::MD5.hexdigest(organization.email)%>" class="img-rounded" height="50" width="50">
              </a>
            </td>
            <td class='list-row-desc'>
              <a href="/app/Organization/set_org?id=<%=organization.object%>" class="custom-link" data-back="/app/Organization" data-link='/app/Gallery'>
                <div class='info-grey2'>
                  <span class='gallery-header'><%= organization.username %></span>
                </div>
              </a>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<script type='text/javascript'>
  basic_wrapper();
</script>
