<div class='span12'>
  <div class="subheader">
    <h4 class='pull-left'>Write a Review</h4>
  </div>
  <div id='wrapper'>
    <div id='scroller'>
      <div style="text-align:center;;margin-top:10px">
        <%5.times do |i|%>
          <div id='star<%=i%>' class="glyphicon glyphicon-star-empty padd-star"></div>
        <%end%>
        <div style="text-align:center;color:#555555">Tap a Star to Rate</div>
      </div>
      <form role="form" action="/app/Review/create" style='padding:0 5px 0 5px'>
        <div class="form-group" style="margin-top:10px">
          <input name='title' type='text' class='form-control' placeholder='Enter title'/>
        </div>
        <div class="form-group" style="margin-top:5px">
          <textarea name='review' class="form-control" rows="12" placeholder='Enter Review'></textarea>
        </div>
        <button type="submit" class="btn btn-default custom-form" data-back='/app/GalleryApp/show?id=<%=@id%>' style="margin-top:5px">Send</button>
      </form>
    </div>
  </div>
</div>
<script type='text/javascript'>
  basic_wrapper();
</script>